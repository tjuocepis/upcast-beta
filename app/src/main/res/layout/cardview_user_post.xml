<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/user_post_thumb"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="2dp"
                android:src="@drawable/kitty2"
                android:scaleType="centerCrop"
                />

            <RelativeLayout
                android:id="@+id/user_post_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <TextView
                    android:id="@+id/user_post_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:text="Username123"
                    android:textColor="#fff"
                    android:textSize="20sp"/>

                <RatingBar
                    android:id="@+id/user_post_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_below="@+id/user_post_name"
                    android:numStars="5"
                    android:isIndicator="true"
                    style="?android:attr/ratingBarStyleSmall" />

                <ImageButton
                    android:id="@+id/user_post_overflow"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_more"
                    android:scaleType="fitCenter"/>

            </RelativeLayout>

        </LinearLayout>
        
    </android.support.v7.widget.CardView>
    
</LinearLayout>